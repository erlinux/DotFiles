set laststatus=2
"开启横幅
set showcmd
"输入命令
set colorcolumn=84
"显示红竖
set number
set cursorline
"自动列数
set smartindent
"智能对齐
set tabstop=4
"tab个数
set background=dark
"背景颜色

syntax on
"语法高亮
filetype on                    
"检测类型  
filetype plugin on
"允许插件

set fileencodings=uft-8      "使用utf-8或gbk打开文件
set cursorline               "为光标所在行加下划线
set noeb                     "去掉输入错误的提示声音

"键盘映射
map   <C-A> ^
map   <C-E> $
map   <C-Z> u
map   <C-U> dd
map   <C-H> <Esc>:noh<CR>

"set ruler
"set showmode
"命令行显示vim当前模式
